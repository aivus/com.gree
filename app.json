    "drivers": [
        {
            "id": "gree_cooper_hunter_hvac",
            "name": {
                "en": "Gree, Cooper&Hunter HVAC"
            },
            "class": "thermostat",
            "capabilities": [
                "onoff",
                "target_temperature",
                "hvac_mode"
            ],
            "capabilitiesOptions": {
                "target_temperature": {
                    "min": 16,
                    "max": 30,
                    "step": 1
                }
            },
            "mobile": {
                "components": [
                    {
                        "id": "icon",
                        "capabilities": []
                    },
                    {
                        "id": "thermostat",
                        "capabilities": [
                            "target_temperature"
                        ]
                    }
                ]
            },
            "pair": [
                {
                    "id": "list_devices",
                    "template": "list_devices",
                    "navigation": {
                        "next": "add_my_devices"
                    }
                },
                {
                    "id": "add_my_devices",
                    "template": "add_devices"
                }
            ],
